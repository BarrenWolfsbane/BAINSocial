<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191818">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="216dp"
        android:layout_height="182dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loginProcessTypeLabel"
        android:layout_width="360dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:text="Login Type - Local Passphrase"
        android:textColor="#09D7F1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

    <TextView
        android:id="@+id/stepOneLoginLabel"
        android:layout_width="161dp"
        android:layout_height="21dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="Generating Secrets -"
        android:textColor="#00BCD4"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/stepTwoLoginLabel"
        app:layout_constraintEnd_toStartOf="@+id/stepOneLoginProgress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginProcessTypeLabel"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/stepOneLoginProgress"
        android:layout_width="161dp"
        android:layout_height="21dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text=" In Progress"
        android:textColor="#CDDC39"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toEndOf="@+id/stepOneLoginLabel"
        app:layout_constraintTop_toBottomOf="@+id/loginProcessTypeLabel"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/stepTwoLoginLabel"
        android:layout_width="161dp"
        android:layout_height="21dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:text="Checking For Keys -"
        android:textColor="#00BCD4"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/stepTwoLoginProgress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stepOneLoginLabel"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/stepTwoLoginProgress"
        android:layout_width="161dp"
        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text=" In Progress"
        android:textColor="#CDDC39"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stepTwoLoginLabel"
        app:layout_constraintTop_toBottomOf="@+id/stepOneLoginProgress"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="411dp"
        android:layout_height="730dp"
        android:alpha="0.07"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:text="@string/bain_social_scroll_bg"
        android:textColor="#00BCD4"
        android:textScaleX="1"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/KeyDisplay"
        android:layout_width="343dp"
        android:layout_height="360dp"
        android:text="TextView"
        android:textColor="#00DCF8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stepTwoLoginLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>